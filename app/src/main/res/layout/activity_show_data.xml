<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"

        android:layout_marginTop="10dp"
        android:background="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/giga_bold"
        android:text="Show Activity"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="@drawable/content1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-125dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingTop="20dp"

            >

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf"
                android:text="Your activity"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sf"
                android:text="ID" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/TextView01"
                android:layout_marginTop="10dp"
                android:background="@drawable/content4"
                android:fontFamily="@font/giga_medium"
                android:padding="10dp"
                android:text="Id"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:fontFamily="@font/sf"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/TextView02"
                android:layout_marginTop="10dp"
                android:background="@drawable/content4"
                android:fontFamily="@font/giga_medium"
                android:padding="10dp"
                android:text="Task Name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:fontFamily="@font/sf"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/TextView03"
                android:layout_marginTop="10dp"
                android:background="@drawable/content4"
                android:fontFamily="@font/giga_medium"
                android:padding="10dp"
                android:text="Date"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:fontFamily="@font/sf"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/TextView04"
                android:layout_marginTop="10dp"
                android:background="@drawable/content4"
                android:fontFamily="@font/giga_medium"
                android:padding="10dp"
                android:text="Priority"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="@font/sf"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_below="@+id/TextView05"
                android:layout_marginTop="10dp"
                android:background="@drawable/content4"
                android:fontFamily="@font/giga_medium"
                android:padding="10dp"
                android:text="Description"
                android:textSize="15sp" />





        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/giga_medium"
        android:text="to-do list and an task management"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />




</androidx.constraintlayout.widget.ConstraintLayout>
